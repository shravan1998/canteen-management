<!DOCTYPE html>
<html>
    <head>
        <title>Canteen Management</title>
        <link href="node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet">

        <link href="style.css" rel="stylesheet">
      
    </head>
    <body>
       <div class="home-container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Canteen Management</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-item nav-link" href="/record">Enter Details</a>
                <a class="nav-item nav-link active" href="/details">Record Details <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="/feedbacks">Feedbacks</a>
                
               
              </div>
              <span class="navbar-text">
                <button type="button" class="btn btn-danger" onclick="location.href='/admin'">Log Out</button>
              </span>
            </div>
          </nav>
          <table class="table table-light">
            <thead class="thead-light">
              <tr>
                <th scope="col">Food Item</th>
                <th scope="col">Additional Food Item(if any)</th>
                <th scope="col">Cost</th> 
                <th scope="col">Ordered</th>
                <th scope="col">Tools</th>
              </tr>
            </thead>
            <tbody>
              
             <% records.forEach(function(x) {%>
              <tr>
              <td><%= x.food_item %> </td>
              <td><%= x.additional_food_item %> </td>
              
              <td><%= x.cost%></td>
              <td>
                <% if(x.cart == 0){ %>
                  No
                  <% }else{ %>
                    Yes
                    <% }%>  
              </td>
           
              <td>
                <% if(x.cart !=0){ %>
                  <button type="button" onclick="location.href='/ordered/<%= x.record_rid  %>'"  class="btn btn-primary">Ordered</button>
                  <% } %> 
                <button type="button" onclick="location.href='/update/<%=x.record_rid%>'" class="btn btn-success">
                  Update                  
                </button>
                <button type="button" onclick="location.href='/delete/<%=x.record_rid%>'" class="btn btn-danger">
                  Delete
                </button>
              </td>
            </tr>
             <% }); %>  
            </tbody>
          </table>
       </div>
              
    </body>
   
</html>